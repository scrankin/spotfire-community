{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/.ruff_cache": true,
        "**/.pytest_cache": true,
        "**/**.egg-info/": true,
    },
    "python.testing.pytestArgs": [
        "--cov=src/spotfire_community/",
        "tests/"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
}
