{
	"name": "spotfire-community",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"postCreateCommand": "chmod +x .devcontainer/post-create.sh && .devcontainer/post-create.sh",
	"remoteEnv": {
		"WORKSPACE_PATH": "${containerWorkspaceFolder}"
	},
	"remoteUser": "vscode",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"tamasfe.even-better-toml"
			]
		}
	}
}